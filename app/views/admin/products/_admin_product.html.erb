<% @products.each do |admin_product| %>
<tr>
    <td>
        <%= admin_product.name %>
    </td>
    <td>
        <%= admin_product.description %>
    </td>
    <td>
        <%= admin_product.price %>
    </td>
    <% if admin_product.avatar? %>
    <td>
        <%= image_tag(admin_product.avatar.url) %>
    </td>
    <% end %>
    <td>
        <%= link_to 'Edit', edit_admin_product_path(admin_product) %>
    </td>

    <td>
        <%= link_to 'Delete', admin_product_path(admin_product), method: :delete %>
    </td>
</tr>
<% end %>
