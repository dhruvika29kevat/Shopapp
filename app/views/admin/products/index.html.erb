<h1>Admin Products</h1>
<div class="container">
    <div class="row">
        <%= link_to 'Add Product', new_admin_product_path %>
        <div class="col-12 card">
           <table class="table">
               <thead>
                   <th>Name</th>
                   <th>Description</th>
                   <th>Price</th>
               </thead>
               <tbody>
                   <tr>
                       <td>
                           <%= render 'admin_product', collection: @products %>
                       </td>
                   </tr>
               </tbody>
           </table> 
        </div>
    </div>
</div>