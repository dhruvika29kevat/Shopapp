<% Product.all.each do |product| %>
<div class="container">
    <div class="card">
        <div class="card-body">
            <p>
                <%= product.description %>
            </p>
            <p>
                <small> SGD</small>
                <%= product.price %>
            </p>
        </div>
        <%= link_to 'Add to Cart', add_to_cart_path(@product), method: :put %>
        <div class="card-footer">
            <%= link_to 'Back to Product List', products_path %>
        </div>
    </div>
</div>
<% end %>